<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:stretchColumns="1">
<TableRow>
    <TextView
        android:id="@+id/txt_no"
        android:text="1"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="3dip" />
    <TextView
        android:id="@+id/txt_jenis_pengurusan"
        android:text="Kartu Keluarga"
        android:textColor="@color/black"
        android:padding="3dip" />
    <TextView
        android:id="@+id/txt_tgl_pengurusan"
        android:text="07 Agustus 2017"
        android:textColor="@color/black"
        android:gravity="right"
        android:padding="3dip" />
    <TextView
        android:id="@+id/txt_status_verifikasi"
        android:background="@drawable/btn_ok"
        android:text="on process"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:padding="3dip" />
</TableRow>

</TableLayout>